  <body>

    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">MachMail</a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">user.name@machmail.com <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Edit Profile</a></li>
                <li class="divider"></li>
                <li><a href="#">Sign Out</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
        <h3 class="dropdownTitle">Mailboxes</h3>
          <ul class="nav nav-sidebar">
            <li>Inbox</li>
            <li>Sent</li>
            <li>Outbox</li>
            <li>Drafts</li>
            <li class="dropdownTitle">Folders</li>
              <ul >
               <li class="dropdownItem"><a href="/home/mach/huffP">Huffington Post</a></li>
                <li class="dropdownItem"><a href="/home/mach/mash">Mashable</a></li>
                <li class="dropdownItem"><a href="/home/mach/bloomberg">Bloomberg</a></li>
                <li class="dropdownItem"><a href="/home/mach/wired">Wired</a></li>
                <li class="dropdownItem"><a href="/home/mach/nyt">New York Times</a></li>
                <li class="dropdownItem">Saved</li>
              </ul>
            <li>Trash</li>
            <li>Spam</li>
          </ul>
          <hr>
          <h3 class="dropdownTitle">Contacts</h3>
          <ul class="nav nav-sidebar">
            <li>Abraham Lincoln</li>
            <li>Gerald Ford</li>
            <li>Thomas Jefferson</li>
            <li>Millard Filmore</li>
            <li>Dwight D. Eisenhower</li>
            <li>George Washington</li>
          </ul>
          <hr>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        
        <div id="mailboxTools">
            <div class="buttonWrapper">
              <div class="btn btn-default" type="button" value="Refresh" id="refresh"><i class="fa fa-refresh fa-lg"></i></div>
              <div class="btn btn-default" type="button" value="Compose"><i class="fa fa-pencil fa-lg"></i></div>
              <div class="btn btn-default" type="button" value="Delete" id="delete"><i class="fa fa-trash-o fa-lg"></i></div>
            </div>
            <div class="buttonWrapper" id="nextEmails">
              <p>1 of 100</p>
              <input class="btn btn-default" type="button" value="&lt;">
              <input class="btn btn-default" type="button" value="&gt;">
            </div>
            <form id="filter">
              <input id="filterBar" type="text" class="form-control" placeholder="Search mail...">
            </form>
          </div>

          <div id="articleBody">
            <div id="inbox" class="table-responsive">
              <table class="table table-hover table-condensed">
                <thead>
                  <tr>
                    <th class="col-sm-1"><input type="checkbox" class="myCheckbox" id="selectAll"></th>
                    <th class="col-sm-3"><h5 class="tableHeader">Sender</h5></th>
                    <th class="col-sm-7"><h5 class="tableHeader">Subject</h5></th>
                    <th class="col-sm-1"><h5 class="tableHeader">Date</h5></th>
                  </tr>
                </thead>
                <tbody>


                    <% i = 0 %>
                    <% @articles.each do |art| %>
                    <% if art != "" && art[0..3] != "More" && art.length > 19 %>
                    <%= "<tr><td><input type='checkbox' class='myCheckbox'></td>".html_safe %>
                    <%= "<td>#{['Abraham Lincoln','Gerald Ford','George Washington','John Adams','Bill Clinton','George Bush','Jimmy Carter','Barack Obama','Ronald Regan'][rand(9)]}</td>".html_safe %>
                    <%= "<td id='art_#{i}' class='articles'> #{art} </td>".html_safe %>
                    <%= "<td>#{Time.now.asctime[4..9]}</td> </tr>".html_safe %>
                     
                    <% end %>
                    <% i += 1 %>
                    <% end %>
                    
                  
                </tbody>
              </table>
            </div>
          </div>

        </div>
      </div>
    </div>



