          <!-- <h2 style="display:inline-block; margin:0; padding:0;" class="sub-header">Inbox</h2> -->

          <div id="mailboxTools">
            <div class="buttonWrapper">
              <input class="btn btn-default" type="button" value="Compose">
              <input class="btn btn-default" type="button" value="Refresh" id="refresh">
              <input class="btn btn-default" type="button" value="Delete" id="delete">
            </div>
            <div class="buttonWrapper" id="nextEmails">
              <p>1 of 100</p>
              <input class="btn btn-default" type="button" value="&lt;">
              <input class="btn btn-default" type="button" value="&gt;">
            </div>
            <form id="filter">
              <input id="filterBar" type="text" class="form-control" placeholder="Search mail...">
            </form>
          </div>
          <div id="readingPane" class="table-responsive">
           <div id='articleBody'> <div id='remove'>X</div></div>
            <table class="table table-hover table-condensed">
              <thead>
                <tr>
                  <th class="col-sm-1"><input type="checkbox" class="myCheckbox" id="selectAll"></th>
                  <th class="col-sm-3"><h5>Sender</h5></th>
                  <th class="col-sm-7"><h5>Subject</h5></th>
                  <th class="col-sm-1"><h5>Date</h5></th>
                </tr>
              </thead>
              <tbody>
                
                  <% i = 0 %>
                  <% @articles.each do |art| %>
                  <% if art != "" && art[0..3] != "More" %>
                  <%= "<tr> <td><input type='checkbox' class='myCheckbox'></td>".html_safe %>
                  <%= "<td>Random Name</td>".html_safe %>
                  <%= " <td id='art_#{i}' class='articles'> #{art} </td>".html_safe %>
                  <%= "<td>#{Time.now.asctime[4..9]}</td> </tr>".html_safe %>
                   
                  <% end %>
                  <% i += 1 %>
                  <% end %>
                  
                
              </tbody>
            </table>
